<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="364dp"
    android:layout_height="140dp"
    tools:context=".login.QuestionActivity"
    android:background="@drawable/white_radius_layout" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_bold"
            android:text="본인 명의의 휴대폰인가요?"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="26dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="22dp" >

            <Button
                android:id="@+id/button7"
                android:layout_width="155dp"
                android:layout_height="47dp"
                android:background="@drawable/gray_radius_10dp_btn"
                android:fontFamily="@font/noto_sans"
                android:text="아니요"
                android:textColor="#838383"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="155dp"
                android:layout_height="47dp"
                android:background="@drawable/green_radius_10dp_btn"
                android:text="네"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginLeft="6dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>