<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".join.JoinYActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="129dp"
            android:fontFamily="@font/noto_sans_bold"
            android:text="반가워요, 사용자1님!"
            android:textColor="#333333"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/noto_sans"
            android:text="그렇다면 보호 종료 확인서를"
            android:textColor="#333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/noto_sans"
            android:text="소지하고 계신가요?"
            android:textColor="#333333"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="161dp" >

            <Button
                android:id="@+id/btn_yes"
                android:layout_width="364dp"
                android:layout_height="58dp"
                android:background="@drawable/green_radius_opacity_btn"
                android:fontFamily="@font/noto_sans"
                android:text="네, 있습니다."
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_no"
                android:layout_width="364dp"
                android:layout_height="58dp"
                android:layout_marginTop="21dp"
                android:background="@drawable/white_radius_opacity_btn"
                android:fontFamily="@font/noto_sans"
                android:text="없습니다."
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>