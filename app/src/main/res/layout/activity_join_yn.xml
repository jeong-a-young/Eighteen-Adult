<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".join.JoinYNActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/join_image_background" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_bold"
            android:text="반가워요, 사용자1님!"
            android:textSize="24sp"
            android:layout_marginTop="129dp"
            android:layout_marginLeft="32dp"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:text="그렇군요!" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text="그렇다면 일자리 지원이나 급여 지원 정보가 필요하신가요?" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="32dp"
            android:text="사용자1님께 조금 더 유용한 정보를 제공드리기 위함입니다." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="168dp" >

            <Button
                android:id="@+id/button"
                android:layout_width="364dp"
                android:layout_height="58dp"
                android:background="@drawable/green_radious_opacity_btn"
                android:text="네, 필요합니다."
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button1"
                android:layout_width="364dp"
                android:layout_height="58dp"
                android:background="@drawable/white_radious_opacity_btn"
                android:text="필요하지 않습니다."
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:layout_marginTop="21dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>